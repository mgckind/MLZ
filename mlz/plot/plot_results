    ophot1a, = s1M.plot(Ob1s.bins, Ob1p.mean, 'b--', visible=False, lw=1.5)
    ophot2a, = s1M.plot(Ob2s.bins, Ob2p.mean, 'g--', visible=False, lw=1.5)

